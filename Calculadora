#include <stdio.h>

void calculadora (float soma, float multiplicacao, float divisao, float subtracao){

printf("A subtracao dos valores digitados e: %f", subtracao);
printf("A multiplicacao dos valores digitados e: %f", multiplicacao);
printf("A divisao dos valores digitados e: %f", divisao);

soma = valor1 + valor2;
subtracao = valor1 - valor2;
multiplicacao = valor1 * valor2;
divisao = valor1 / valor2;
}

int main(){
int x; 
float valor1, float valor2;

printf("Calculadora.");
printf("Qual operação deseja fazer:\n 1-Soma\n 2-Subtração\n 3-Multiplicação\n 4-Divisão");
scanf("%d",&x);

calculadora();

switch (x){

case 1:
printf("Digite o primeiro numero: %f");
scanf("%f", &valor1);
printf("Agora digite o segundo valor %f");
scanf("%f", &valor2);
soma()

case 2:
printf("Digite o primeiro numero: %f");
scanf("%f", &valor1);
printf("Agora digite o segundo valor %f");
subtracao()

case 3:
printf("Digite o primeiro numero: %f");
scanf("%f", &valor1);
printf("Agora digite o segundo valor %f");
scanf("%f", &valor2);
multiplicacao()

case 4:
printf("Digite o primeiro numero: %f");
scanf("%f", &valor1);
printf("Agora digite o segundo valor %f");
scanf("%f", &valor2);
divisao()
}

return 0;
}
